<%- include('../partials/header') %>
<h1>Let's <%= title %></h1>
<form action="/menu" method="POST">
  <section id="menu">
    <label
      >Choose Menu Type
      <select name="category">
        <option value="Manty">Manty</option>
        <option value="Laghman">Laghman</option>
        <option value="Plov">Plov</option>
        <option value="Tvorog">Tvorog</option>
        <option value="Manty Fusion">Manty Fusion</option>
        <option value="Impossible PeppersP">Impossible Peppers</option>
      </select> </label
    ><br />
    <label
      >Fillings (separate ingredients with commas):
      <input type="text" name="stuffing" /> </label
    ><br />
    <label
      >Is it Frozen?: <input type="checkbox" name="frozen" unchecked /> </label
    ><br />
    <label>Package Size: <input type="text" name="pkgSize" /> </label><br />
    <label>Price: <input type="text" name="price" /> </label><br />
    <input type="submit" value="Add Menu Item" />
  </section>
</form>
<%- include('../partials/footer') %>
